<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.tyolani.everlastingstorypro.OverviewActivity"
                android:background="@color/colorReadWrite">

    <android.support.v7.widget.Toolbar
        android:id="@+id/menu_contribution_addParagraph"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        />

    <TextView
        android:id="@+id/tv_contribution_add_paragraph_title"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_title"
        android:background="#00000000"
        android:gravity="center"
        android:maxLines="1"
        android:layout_below="@+id/menu_contribution_addParagraph"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"/>

    <TextView
        android:id="@+id/tv_contribution_add_paragraph_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_contribution_add_paragraph_title"
        android:layout_marginTop="29dp"
        android:textSize="@dimen/size_book_content"
        android:background="#00000000"
        android:scrollbars="vertical"
        />

    <EditText
        android:id="@+id/et_contribution_add_paragraph_new_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="@dimen/size_book_content"
        android:inputType="textMultiLine"
        android:background="#00000000"
        android:layout_below="@+id/tv_contribution_add_paragraph_content"
        android:scrollbars="vertical"
        />


</RelativeLayout>
